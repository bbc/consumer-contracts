{
  "name": "@bbc/consumer-contracts",
  "version": "4.2.2",
  "description": "Consumer driven contracts for Node.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "posttest": "npm run lint",
    "coverage": "istanbul cover _mocha -- -R dot",
    "format": "prettier --log-level warn --write \"**/*.{js,json,jsx,md,ts,tsx,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,jsx,md,ts,tsx,html}\""
  },
  "bin": {
    "consumer-contracts": "./lib/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/consumer-contracts.git"
  },
  "keywords": [
    "consumer",
    "contracts"
  ],
  "author": "ibl-team@lists.forge.bbc.co.uk",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/consumer-contracts/issues"
  },
  "homepage": "https://github.com/bbc/consumer-contracts#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "debug": "^4.3.5",
    "filehound": "^1.17.6",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "picocolors": "^1.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-iplayer": "^9.2.0",
    "eslint-plugin-mocha": "^10.4.3",
    "istanbul": "^0.4.5",
    "mocha": "^10.6.0",
    "nock": "^13.5.4",
    "prettier": "^3.3.2",
    "sinon": "^18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "iplayer/base",
      "iplayer/ts",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {}
  }
}
